<div id="creators" class="creators">
  {% for creator in site.data.creators %}
    <div id="{{ creator.code.name }}" class="card" data-tags="{{ creator.tags | join: "," }}">
      <div class="content">
        {% if creator.no_thumb %}
          <img width="50" src="/images/u/{{ creator.avatar }}" alt="" />
        {% else %}
          <img width="50" src="/images/u/thumb/{{ creator.avatar | replace: "png", "jpg" }}" alt="" />
        {% endif %}
        <h3>
          {{ creator.name }}
        </h3>
        <div class="meta">
          <a href="{{ creator.code.link }}">@{{ creator.code.name }}</a>
        </div>
        <div class="description">
          {{ creator.description }}
        </div>
      </div>
      <div class="card-extra">
        <a href="{{ creator.support.link }}" class="button">{{ creator.support.name }}</a>
      </div>
    </div>
  {% endfor %}
</div>

